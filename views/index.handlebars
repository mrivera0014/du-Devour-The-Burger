<h1>Nom Nom Nom</h1>

<h2>Burgers Ready to Devour!</h2>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li> {{burger_name}}
        <button class="change-devoured" data-id="{{id}}" data-newdevour="{{devoured}}">
            {{#if devoured}}{{else}}Devour!{{/if}}
        </button>
    </li>
    {{/unless}}
    {{/each}}



</ul>

<h2>Burgers Devoured!</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li> {{burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>